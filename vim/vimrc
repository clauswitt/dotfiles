" Auto commands
function! SetScreenTitle()
  silent !clear
  let titlestring = "Program: vim | File: " . expand("%") . ""
  let cmd = "!~/Scripts/name.sh \"".titlestring."\""
  silent execute(cmd)
  redraw!
endfunction

autocmd BufEnter * call SetScreenTitle()
